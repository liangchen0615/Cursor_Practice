/* pages/index/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}
.guess-grid {
  margin-bottom: 40rpx;
}
.guess-row {
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
}
.guess-cell {
  width: 60rpx;
  height: 60rpx;
  border: 2rpx solid #ccc;
  margin: 0 5rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  background: #fff;
  border-radius: 8rpx;
  transition: background 0.2s;
}
.guess-cell.green {
  background: #6aaa64;
  color: #fff;
  border-color: #6aaa64;
}
.guess-cell.yellow {
  background: #c9b458;
  color: #fff;
  border-color: #c9b458;
}
.guess-cell.grey {
  background: #787c7e;
  color: #fff;
  border-color: #787c7e;
}
.keyboard {
  width: 100%;
  max-width: 500rpx;
}
.keyboard-row {
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-bottom: 10rpx;
}
.key-btn {
  width: 48rpx;
  height: 48rpx;
  margin: 0 4rpx;
  font-size: 24rpx;
  background: #eee;
  border-radius: 6rpx;
  border: none;
}
.message {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #d9534f;
} 