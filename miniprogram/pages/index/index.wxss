/* pages/index/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}
.guess-grid {
  margin-bottom: 40rpx;
}
.guess-row {
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
}
.guess-cell {
  width: 60rpx;
  height: 60rpx;
  border: 2rpx solid #ccc;
  margin: 0 5rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  background: #fff;
  border-radius: 8rpx;
}
.keyboard {
  width: 100%;
  max-width: 500rpx;
}
.keyboard-row {
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-bottom: 10rpx;
}
.key-btn {
  width: 48rpx;
  height: 48rpx;
  margin: 0 4rpx;
  font-size: 24rpx;
  background: #eee;
  border-radius: 6rpx;
  border: none;
} 